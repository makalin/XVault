{
    "manifest_version": 3,
    "name": "XVault Tweet Saver",
    "version": "1.0",
    "description": "Save screenshots of X (Twitter) tweets directly from your browser.",
    "permissions": ["activeTab"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}